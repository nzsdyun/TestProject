<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/open_accessible_settings_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/open_accessible_service_tips"
        android:visibility="gone"/>

    <CheckBox
        android:id="@+id/auto_add_near_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/auto_add_near_contacts_start" />
    <Button
        android:id="@+id/start_auto_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/auto_start_add_near_contacts"/>

    <ImageButton
        android:id="@+id/open_accessible_settings"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_gravity="center"
        android:layout_marginTop="50dip"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_launcher_settings"
        android:scaleType="fitCenter" />

</LinearLayout>
